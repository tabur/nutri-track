psql -U postgres -h localhost

create database nutritrack;
\l

\c nutritrack;

CREATE TABLE day (
    dayid   BIGSERIAL NOT NULL PRIMARY KEY,
    date    Date,	
    mealid  BIGINT[]
);

CREATE TABLE meal (
    mealid      BIGSERIAL NOT NULL PRIMARY KEY,
    foodid      BIGINT[],
    day         Date,		
    amount      float
);

CREATE TABLE Food (
foodid BIGSERIAL NOT NULL PRIMARY KEY,
manufacturer VARCHAR(100),
description VARCHAR(100),
energy float,
carbs float,
sugar float,
fiber float,
fat float,
saturated float,
unsaturated float,
protein float,
salt float
);

CREATE TABLE NutritrackUser (
userid BIGSERIAL NOT NULL PRIMARY KEY,
email varchar (100),
password varchar (100),
targetenergy float,
targetprotein float,
targetfat float,
targetcarbs float,
targetweight float,
targetrate float,
historyid BIGINT,
days DATE
); 

CREATE TABLE History (
HistoryID BIGSERIAL NOT NULL PRIMARY KEY,
userId BIGINT,
date Date,
weight DATE,
waist float,
chest float,
neck float
); 
